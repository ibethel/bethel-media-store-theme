{%- if bm_img_url != blank and bm_img_srcset == blank -%}

  {%- if bm_img_url contains ".jpg" -%}
    {%- assign src_url_loading_height_width = "_"
      | append: default_loading_height_width
      | append: '.jpg' -%}
    {%- assign src_url = bm_img_url
      | replace: '.jpg', src_url_loading_height_width -%}
    {%- assign bm_img_url = bm_img_url | replace: '.jpg', '_{width}x.jpg' -%}
    {%- elsif bm_img_url contains ".png" -%}
      {%- assign src_url_loading_height_width = "_"
        | append: default_loading_height_width
        | append: '.png' -%}
      {%- assign src_url = bm_img_url
        | replace: '.png', src_url_loading_height_width -%}
      {%- assign bm_img_url = bm_img_url | replace: '.png', '_{width}x.png' -%}
  {%- endif -%}

  {{- bm_img_url -}}

  {%- elsif bm_img_srcset != blank -%}
    {%- assign src_url = bm_img_url -%}
    {{- src_url -}}
  {%- else -%}
    {%- assign img_url = bm_img | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
    {{- img_url -}}
{%- endif -%}

