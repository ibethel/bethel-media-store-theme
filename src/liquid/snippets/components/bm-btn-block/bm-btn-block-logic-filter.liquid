{%- liquid
  if button_alignment_desk contains "inherit"
    if text_alignment_desk contains "start"
      assign button_alignment_desk = "justify-content-xl-start"
    endif

    if text_alignment_desk contains "center"
      assign button_alignment_desk = "justify-content-xl-center"
    endif

    if text_alignment_desk contains "end"
      assign button_alignment_desk = "justify-content-xl-end"
    endif
  endif

  if button_alignment_phone contains "inherit"
    if text_alignment_phone contains "start"
      assign button_alignment_phone = "justify-content-start"
    endif

    if text_alignment_phone contains "center"
      assign button_alignment_phone = "justify-content-center"
    endif

    if text_alignment_phone contains "end"
      assign button_alignment_phone = "justify-content-end"
    endif
  endif

  if button_alignment_tablet contains "inherit"
    if text_alignment_tablet contains "start"
      assign button_alignment_tablet = "justify-content-sm-start"
    endif

    if text_alignment_tablet contains "center"
      assign button_alignment_tablet = "justify-content-sm-center"
    endif

    if text_alignment_tablet contains "end"
      assign button_alignment_tablet = "justify-content-sm-end"
    endif
  endif
-%}

