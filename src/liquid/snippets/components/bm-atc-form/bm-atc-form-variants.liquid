{%- if product_variant_selection == "option-radio" -%}

    {%- render 'bm-atc-form-options-radio',
      form_product: form_product,
      form_id: form_id -%}

  {%- elsif product_variant_selection == "option-dropdown" -%}

    {%- render 'bm-atc-form-options-select',
      form_product: form_product,
      form_id: form_id -%}

  {%- elsif product_variant_selection == "variant-dropdown" -%}

    {%- render 'bm-atc-form-variants-select',
      form_product: form_product,
      form_id: form_id -%}

  {%- elsif product_variant_selection == "variant-radio" -%}

    {%- render 'bm-atc-form-variants-radio',
      form_product: form_product,
      form_id: form_id -%}

{%- endif -%}
