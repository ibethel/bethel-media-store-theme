  function sca_default_custom_function ($,product) {
    $('#sca-nbtemp').remove();
    var nbtemp = $('.sca-next-back').clone(true, true);
    nbtemp.attr('id','sca-nbtemp');
    $('.sca-next-back').hide();
    nbtemp.show();
    nbtemp.insertAfter('.sca-fancybox-outer');
     if(product == undefined) return;
