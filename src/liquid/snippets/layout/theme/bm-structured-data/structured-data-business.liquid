{%- assign bm_logo = settings.bm_logo -%}

{
  "@context": "https://schema.org",
  "@type": "LocalBusiness",

  {%- if bm_logo != blank -%}
    "image": {% render 'structured-data-images' current_image: bm_logo %},
  {%- endif -%}

  "@id": {{ shop.url | json }},
  "name": {{ shop.name | json }},
  "description": {{ shop.description | json }},
  "address": {
    "@type": "PostalAddress",
    "streetAddress": {{ shop.address.street | json }},
    "addressLocality": {{ shop.address.city | json }},
    "addressRegion": {{ shop.address.province_code | json }},
    "postalCode": {{ shop.address.zip | json }},
    "addressCountry": "US"
  },
  "geo": {
    "@type": "GeoCoordinates",
    "latitude": 40.62601975515798,
    "longitude": -122.37322612838358
  },
  "url": {{ shop.url | json }}
}
