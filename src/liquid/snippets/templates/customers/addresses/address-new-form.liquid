<section class="bm-address-new">
  {%- assign add_address_title = 'addresses.add_new' | t -%}

  {%- render 'bm-title-block',
    title_content: add_address_title,
    title_font: "ff-ivypresto",
    title_margin: "mb-3",
    title_size: "fs-4",
    title_tag: "h4" -%}

  {%- form 'customer_address', customer.new_address -%}

    {%- if form.errors -%}
      {{ form.errors | default_errors }}
    {%- endif -%}

    <input
      type="text"
      class="px-2 py-3 mb-3 border-very-light-brown col-12 field"
      name="address[first_name]"
      value="{{ form.first_name }}"
      autocomplete="given-name"
      placeholder="{{ 'addresses.first_name' | t }}"
    />

    <input
      type="text"
      class="px-2 py-3 mb-3 border-very-light-brown col-12 field"
      name="address[last_name]"
      value="{{ form.last_name }}"
      autocomplete="family-name"
      placeholder="{{ 'addresses.last_name' | t }}"
    />

    <input
      type="text"
      class="px-2 py-3 mb-3 border-very-light-brown col-12 field"
      name="address[company]"
      value="{{ form.company }}"
      autocomplete="organization"
      placeholder="{{ 'addresses.company' | t }}"
    />

    <input
      type="text"
      class="px-2 py-3 mb-3 border-very-light-brown col-12 field"
      name="address[address1]"
      value="{{ form.address1 }}"
      autocomplete="address-line1"
      placeholder="{{ 'addresses.address1' | t }}"
    />

    <input
      type="text"
      class="px-2 py-3 mb-3 border-very-light-brown col-12 field"
      name="address[address2]"
      value="{{ form.address2 }}"
      autocomplete="address-line2"
      placeholder="{{ 'addresses.address2' | t }}"
    />

    <input
      type="text"
      class="px-2 py-3 mb-3 border-very-light-brown col-12 field"
      name="address[city]"
      value="{{ form.city }}"
      autocomplete="address-level2"
      placeholder="{{ 'addresses.city' | t }}"
    />

    <select
      id="address_country_{{ form.id }}"
      class="px-2 py-3 mb-3 border-very-light-brown col-12 field"
      name="address[country]"
      data-default="{{ form.country }}"
      autocomplete="country"
    >
      {{- country_option_tags -}}
    </select>

    <div id="address_province_container_{{- form.id -}}" style="display:none">
      <select
        id="address_province_{{- form.id -}}"
        class="px-2 py-3 mb-3 border-very-light-brown col-12 field"
        name="address[province]"
        data-default="{{ form.province }}"
        autocomplete="address-level1"
      ></select>
    </div>

    <input
      type="text"
      class="px-2 py-3 mb-3 border-very-light-brown col-12 field"
      name="address[zip]"
      value="{{ form.zip }}"
      autocapitalize="characters"
      autocomplete="postal-code"
      placeholder="{{ 'addresses.zip' | t }}"
    />

    <input
      type="text"
      class="px-2 py-3 mb-3 border-very-light-brown col-12 field"
      name="address[phone]"
      value="{{ form.phone }}"
      autocomplete="tel"
      placeholder="{{ 'addresses.phone' | t }}"
    />

    <div class="field-group mb-3">
      {{ form.set_as_default_checkbox }}
      <label for="address_default_address_{{ form.id }}">{{ 'addresses.set_default' | t }}</label>
    </div>

    <div class="bm-address-new__actions">

      {%- assign add_title = 'addresses.add' | t -%}

      {%- render 'bm-btn-template',
        button_classes: "col-12",
        button_content: add_title,
        button_size: "large",
        button_title: add_title,
        button_template: "primary",
        button_type: "submit",
        button_radius: "rounded-5" -%}

    </div>

  {%- endform -%}

</section>
