{%- render 'btv-header',
  background_color: section.settings.background_color,
  enable_background: section.settings.enable_background,
  enable_sticky: section.settings.enable_sticky,
  enable_text_styles: section.settings.enable_text_styles,
  logo: section.settings.logo,
  logo_max_width: section.settings.logo_max_width,
  section_blocks: section.blocks,
  text_color: section.settings.text_color,
  text_font: section.settings.text_font_family,
  text_size: section.settings.text_font_size,
  text_weight: section.settings.text_font_weight -%}

{% schema %}
  {
    "name": "t:sections.btv_header.name",
    "settings": [
      {
        "type": "header",
        "content": "t:sections.btv_header.name"
      },
      {
        "type": "checkbox",
        "id": "enable_sticky",
        "label": "Enable sticky",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "enable_background",
        "label": "t:sections.all.enable_background.label",
        "default": false
      },
      {
        "type": "color",
        "id": "background_color",
        "label": "t:sections.all.background_color.label",
        "default": "#fff"
      },
      {
        "type": "image_picker",
        "id": "logo",
        "label": "t:schema_global.logo.label"
      },
      {
        "type": "range",
        "id": "logo_max_width",
        "min": 50,
        "max": 350,
        "step": 5,
        "unit": "px",
        "label": "t:schema_global.logo.logo_max_width",
        "default": 90
      },
      {
        "type": "header",
        "content": "t:sections.all.text.label"
      },
      {
        "type": "checkbox",
        "id": "enable_text_styles",
        "label": "t:sections.all.styles.enable_styles",
        "default": false
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "t:sections.all.color.label",
        "default": "#fff"
      },
      {
        "type": "select",
        "id": "text_font_family",
        "label": "t:sections.all.font_family.label",
        "options": [
          {
            "value": "ff-ivypresto",
            "label": "t:sections.all.font_family.option_ivy"
          },
          {
            "value": "ff-roboto",
            "label": "t:sections.all.font_family.option_roboto"
          },
          {
            "value": "ff-inter",
            "label": "t:sections.all.font_family.option_inter"
          },
          {
            "value": "ff-majesti",
            "label": "t:sections.all.font_family.option_majesti"
          }
        ],
        "default": "ff-roboto"
      },
      {
        "type": "select",
        "id": "text_font_size",
        "label": "t:sections.all.font_size.label",
        "options": [
          {
            "value": "fs-1",
            "label": "t:sections.all.font_size.option_large"
          },
          {
            "value": "fs-2",
            "label": "t:sections.all.font_size.option_xmedium"
          },
          {
            "value": "fs-3",
            "label": "t:sections.all.font_size.option_medium"
          },
          {
            "value": "fs-4",
            "label": "t:sections.all.font_size.option_mediuml"
          },
          {
            "value": "fs-5",
            "label": "t:sections.all.font_size.option_small"
          },
          {
            "value": "fs-6",
            "label": "t:sections.all.font_size.option_smaller"
          }
        ],
        "default": "fs-6"
      },
      {
        "type": "select",
        "id": "text_font_weight",
        "label": "t:sections.all.font_weight.label",
        "options": [
          {
            "value": "fw-default",
            "label": "t:sections.all.font_weight.option_default"
          },
          {
            "value": "fw-bold",
            "label": "t:sections.all.font_weight.option_bold"
          },
          {
            "value": "fw-bolder",
            "label": "t:sections.all.font_weight.option_bolder"
          },
          {
            "value": "fw-light",
            "label": "t:sections.all.font_weight.option_light"
          },
          {
            "value": "fw-lighter",
            "label": "t:sections.all.font_weight.option_lighter"
          }
        ],
        "default": "fw-default"
      }
    ],
    "blocks": [
      {
        "type": "section_link",
        "name": "t:sections.all.link.label",
        "settings": [
          {
            "type": "url",
            "id": "nav_link",
            "label": "t:sections.all.link.label"
          },
          {
            "type": "textarea",
            "id": "nav_link_text",
            "label": "t:sections.all.link.link_text"
          }
        ]
      },
      {
        "type": "section_button",
        "name": "t:sections.all.button.label",
        "settings": [
          {
            "type": "header",
            "content": "t:sections.all.button.label"
          },
          {
            "type": "text",
            "id": "button_text",
            "label": "t:sections.all.button.settings.button_text"
          },
          {
            "type": "url",
            "id": "button_route",
            "label": "t:sections.all.button.settings.button_route"
          },
          {
            "type": "select",
            "id": "button_radius",
            "label": "t:sections.all.button.settings.button_radius.label",
            "options": [
              {
                "value": "rounded-none",
                "label": "t:sections.all.button.settings.button_radius.option_none"
              },
              {
                "value": "rounded-1",
                "label": "t:sections.all.button.settings.button_radius.option_1"
              },
              {
                "value": "rounded-2",
                "label": "t:sections.all.button.settings.button_radius.option_2"
              },
              {
                "value": "rounded-3",
                "label": "t:sections.all.button.settings.button_radius.option_3"
              },
              {
                "value": "rounded-4",
                "label": "t:sections.all.button.settings.button_radius.option_4"
              },
              {
                "value": "rounded-5",
                "label": "t:sections.all.button.settings.button_radius.option_5"
              }
            ],
            "default": "rounded-5"
          },
          {
            "type": "select",
            "id": "button_font_size",
            "label": "t:sections.all.font_size.label",
            "options": [
              {
                "value": "fs-1",
                "label": "t:sections.all.font_size.option_large"
              },
              {
                "value": "fs-2",
                "label": "t:sections.all.font_size.option_xmedium"
              },
              {
                "value": "fs-3",
                "label": "t:sections.all.font_size.option_medium"
              },
              {
                "value": "fs-4",
                "label": "t:sections.all.font_size.option_mediuml"
              },
              {
                "value": "fs-5",
                "label": "t:sections.all.font_size.option_small"
              },
              {
                "value": "fs-6",
                "label": "t:sections.all.font_size.option_smaller"
              },
              {
                "value": "fs-7",
                "label": "t:sections.all.font_size.option_small_three"
              },
              {
                "value": "fs-8",
                "label": "t:sections.all.font_size.option_small_four"
              }
            ],
            "default": "fs-5"
          },
          {
            "type": "select",
            "id": "button_size",
            "label": "t:sections.all.button.settings.button_size.label",
            "options": [
              {
                "value": "none",
                "label": "t:sections.all.button.settings.button_size.option_none"
              },
              {
                "value": "small",
                "label": "t:sections.all.button.settings.button_size.option_small"
              },
              {
                "value": "medium",
                "label": "t:sections.all.button.settings.button_size.option_medium"
              },
              {
                "value": "large",
                "label": "t:sections.all.button.settings.button_size.option_large"
              }
            ],
            "default": "large"
          },
          {
            "type": "select",
            "id": "button_template",
            "label": "t:sections.all.button.settings.button_template.label",
            "options": [
              {
                "value": "primary",
                "label": "t:sections.all.button.settings.button_template.option_primary"
              },
              {
                "value": "secondary",
                "label": "t:sections.all.button.settings.button_template.option_secondary"
              },
              {
                "value": "link",
                "label": "t:sections.all.button.settings.button_template.option_link"
              },
              {
                "value": "regular",
                "label": "t:sections.all.button.settings.button_template.option_regular"
              }
            ],
            "default": "primary"
          },
          {
            "type": "checkbox",
            "id": "enable_button_styles",
            "label": "t:sections.all.button.settings.enable_button_styles",
            "default": false
          },
          {
            "type": "color",
            "id": "button_color",
            "label": "t:sections.all.button.settings.button_color",
            "default": "#000000"
          },
          {
            "type": "color",
            "id": "button_text_color",
            "label": "t:sections.all.button.settings.button_text_color",
            "default": "#ffffff"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "t:sections.btv_header.name"
      }
    ]
  }
{% endschema %}
