{%- if section.settings.enable -%}

  {%- render "bm-universal-nav",
    enable_newsletter: section.settings.enable_newsletter,
    background_color: section.settings.background_color,
    main_nav: section.settings.main_nav,
    newsletter_btn_text: section.settings.newsletter_btn_text,
    text_color: section.settings.text_color -%}

{%- endif -%}

{% schema %}
  {
    "name": "t:sections.universal_menu.name",
    "settings": [
      {
        "type": "header",
        "content": "t:sections.universal_menu.name"
      },
      {
        "type": "checkbox",
        "id": "enable",
        "label": "t:sections.all.enable_section.label",
        "default": false
      },
      {
        "type": "link_list",
        "id": "main_nav",
        "label": "t:sections.universal_menu.settings.universal_main_nav.label"
      },
      {
        "type": "color",
        "id": "background_color",
        "label": "t:sections.all.background_color.label",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "t:sections.all.text_color.label",
        "default": "#000000"
      },
      {
        "type": "header",
        "content": "t:settings_schema.newsletter.name"
      },
      {
        "type": "checkbox",
        "id": "enable_newsletter",
        "label": "t:sections.all.enable_section.label",
        "default": false,
        "info": "t:settings_schema.newsletter.info"
      },
      {
        "type": "text",
        "id": "newsletter_btn_text",
        "label": "t:settings_schema.newsletter.settings.button_text",
        "default": "Sign up!"
      }
    ]
  }
{% endschema %}
