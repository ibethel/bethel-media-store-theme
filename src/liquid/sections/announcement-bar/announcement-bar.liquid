        {
          "value": "autoplay",
          "label": "t:sections.all.slider_scroll.option_autoplay"
        },
        {
          "value": "none",
          "label": "t:sections.all.slider_scroll.option_none"
        }
      ],
      "default": "autoscroll"
    },
    {
      "type": "range",
      "id": "speed",
      "min": 1,
      "max": 10,
      "step": 1,
      "unit": "sec",
      "label": "t:sections.all.slider_speed.label",
      "default": 2
    },
    {
      "type": "range",
      "id": "interval",
      "min": 1,
      "max": 10,
      "step": 1,
      "unit": "sec",
      "label": "t:sections.all.slider_interval.label",
