{%- assign enable = section.settings.enable -%}
{%- assign interval = section.settings.interval | times: 1000 -%}

{%- if enable -%}

  {%- render 'announcement-bar',
    rewind: section.settings.enable_rewind,
    section_blocks: section.blocks,
    section_margin: section.settings.section_margin,
    slider_scroll: section.settings.slider_scroll,
    speed: section.settings.speed,
    interval: interval -%}

{%- endif -%}

