{%- liquid
  assign custom_html = section.settings.custom_html
  assign custom_liquid = section.settings.custom_liquid

  if custom_html != blank
    echo custom_html
  endif

  if custom_liquid != blank
    echo custom_liquid
  endif

-%}

{% schema %}
  {
    "name": "t:sections.html_liquid.name",
    "settings": [
      {
        "type": "html",
        "id": "custom_html",
        "label": "t:sections.all.custom_html.label"
      },
      {
        "type": "liquid",
        "id": "custom_liquid",
        "label": "t:sections.all.custom_liquid.label"
      }
    ],
    "presets": [
      {
        "name": "t:sections.html_liquid.name"
      }
    ]
  }
{% endschema %}
