{%- assign section_blocks = section.blocks -%}

{%- if section_blocks != blank -%}

  {%- render "video-carousel",
    background_color: section.settings.background_color,
    enable_background: section.settings.enable_background,
    enable_contain: section.settings.enable_contain,
    enable_hide_scroll: section.settings.enable_hide_scroll,
    section_blocks: section_blocks,
    section_margin: section.settings.section_margin -%}

{%- endif -%}

{% schema %}
  {
    "name": "Video carousel",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_hide_scroll",
        "label": "t:settings_schema.global.settings.enable_hide_scroll.label",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "enable_contain",
        "label": "t:sections.all.contain.label",
        "default": false,
        "info": "t:sections.all.contain.info"
      },
      {
        "type": "checkbox",
        "id": "enable_background",
        "label": "t:sections.all.enable_background.label",
        "default": false
      },
      {
        "type": "color",
        "id": "background_color",
        "label": "t:sections.all.background_color.label",
        "default": "#fff"
      },
      {
        "type": "header",
        "content": "t:sections.all.content_width.label"
      },
      {
        "type": "header",
        "content": "t:sections.all.alignment.name"
      },
      {
        "type": "select",
        "id": "section_margin",
        "label": "t:sections.all.section_margin.label",
        "options": [
          {
            "value": "mb-0",
            "label": "t:sections.all.section_margin.option_none"
          },
          {
            "value": "mb-1",
            "label": "t:sections.all.section_margin.option_xsmall"
          },
          {
            "value": "mb-2",
            "label": "t:sections.all.section_margin.option_smaller"
          },
          {
            "value": "mb-3",
            "label": "t:sections.all.section_margin.option_small"
          },
          {
            "value": "mb-4",
            "label": "t:sections.all.section_margin.option_medium"
          },
          {
            "value": "mb-5",
            "label": "t:sections.all.section_margin.option_large"
          }
        ],
        "default": "mb-5"
      }
    ],
    "blocks": [
      {
        "type": "section_video",
        "name": "t:sections.all.section_video.label",
        "settings": [
          {
            "type": "header",
            "content": "t:sections.all.section_video.label"
          },
          {
            "type": "url",
            "id": "mp4_url",
            "label": "t:sections.all.section_video.settings.mp4_url.label",
            "info": "t:sections.all.section_video.settings.mp4_url.info"
          },
          {
            "type": "image_picker",
            "id": "thumbnail",
            "label": "t:sections.all.section_video.settings.thumbnail.label",
            "info": "t:sections.all.section_video.settings.thumbnail.info"
          },
          {
            "type": "video_url",
            "id": "iframe_url",
            "label": "t:sections.all.section_video.settings.iframe_url.label",
            "accept": ["youtube"],
            "info": "t:sections.all.section_video.settings.iframe_url.info"
          },
          {
            "type": "checkbox",
            "id": "autoplay",
            "label": "t:sections.all.section_video.settings.autoplay.label",
            "default": false,
            "info": "t:sections.all.section_video.settings.autoplay.info"
          },
          {
            "type": "checkbox",
            "id": "controls",
            "label": "t:sections.all.section_video.settings.controls",
            "default": true
          },
          {
            "type": "checkbox",
            "id": "interaction",
            "label": "t:sections.all.section_video.settings.interaction",
            "default": true
          },
          {
            "type": "checkbox",
            "id": "loop",
            "label": "t:sections.all.section_video.settings.loop",
            "default": false
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Video carousel"
      }
    ]
  }
{% endschema %}
