{%- render "offset-collection-row",
  background_color: section.settings.background_color,
  enable_background: section.settings.enable_background,
  enable_contain: section.settings.enable_contain,
  enable_hide_scroll: section.settings.enable_hide_scroll,
  enable_offset: section.settings.enable_offset,
  enable_sorting: section.settings.enable_sorting,
  hide_after_first_page: section.settings.hide_after_first_page,
  item_offset: section.settings.item_offset,
  item_widths_desk: section.settings.item_widths_desk,
  item_widths_max: section.settings.item_widths_max,
  item_widths_phone: section.settings.item_widths_phone,
  item_widths_tablet: section.settings.item_widths_tablet,
  page_item_limit: section.settings.page_item_limit,
  pagination_type: section.settings.pagination_type,
  section_margin: section.settings.section_margin -%}


{% schema %}
  {
    "name": "t:sections.offset_collection_row.name",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_hide_scroll",
        "label": "t:settings_schema.global.settings.enable_hide_scroll.label",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "enable_contain",
        "label": "t:sections.all.contain.label",
        "default": false,
        "info": "t:sections.all.contain.info"
      },
      {
        "type": "checkbox",
        "id": "enable_background",
        "label": "t:sections.all.enable_background.label",
        "default": false
      },
      {
        "type": "color",
        "id": "background_color",
        "label": "t:sections.all.background_color.label",
        "default": "#fff"
      },
      {
        "type": "range",
        "id": "page_item_limit",
        "min": 2,
        "max": 100,
        "step": 1,
        "unit": "itm",
        "label": "t:sections.collection.settings.page_item_limit",
        "default": 36
      },
      {
        "type": "checkbox",
        "id": "hide_after_first_page",
        "label": "t:sections.offset_collection_row.settings.hide_after_first_page.label",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "enable_sorting",
        "label": "t:sections.offset_collection_row.settings.enable_sorting.label",
        "default": false,
        "info": "t:sections.offset_collection_row.settings.enable_sorting.info"
      },
      {
        "type": "checkbox",
        "id": "enable_offset",
        "label": "t:sections.offset_collection_row.settings.enable_offset.label",
        "default": false,
        "info": "t:sections.offset_collection_row.settings.enable_offset.info"
      },
      {
        "type": "number",
        "id": "item_offset",
        "label": "t:sections.collection.settings.offset.label",
        "info": "t:sections.collection.settings.offset.info"
      },
      {
        "type": "select",
        "id": "pagination_type",
        "label": "t:sections.collection.settings.pagination_type.label",
        "options": [
          {
            "value": "none",
            "label": "t:sections.collection.settings.pagination_type.none"
          },
          {
            "value": "numerical",
            "label": "t:sections.collection.settings.pagination_type.numerical"
          },
          {
            "value": "load_more",
            "label": "t:sections.collection.settings.pagination_type.load_more"
          }
        ],
        "default": "none"
      },
      {
        "type": "header",
        "content": "t:sections.all.item_rows.label"
      },
      {
        "type": "select",
        "id": "item_widths_phone",
        "label": "t:sections.all.item_rows.settings.item_widths_phone",
        "options": [
          {
            "value": "col-12",
            "label": "1"
          },
          {
            "value": "col-6",
            "label": "2"
          }
        ],
        "default": "col-6"
      },
      {
        "type": "select",
        "id": "item_widths_tablet",
        "label": "t:sections.all.item_rows.settings.item_widths_tablet",
        "options": [
          {
            "value": "col-sm-6",
            "label": "2"
          },
          {
            "value": "col-sm-4",
            "label": "3"
          },
          {
            "value": "col-sm-3",
            "label": "4"
          }
        ],
        "default": "col-sm-4"
      },
      {
        "type": "select",
        "id": "item_widths_desk",
        "label": "t:sections.all.item_rows.settings.item_widths_desk",
        "options": [
          {
            "value": "col-xl-6",
            "label": "2"
          },
          {
            "value": "col-xl-4",
            "label": "3"
          },
          {
            "value": "col-xl-3",
            "label": "4"
          }
        ],
        "default": "col-xl-3"
      },
      {
        "type": "select",
        "id": "item_widths_max",
        "label": "t:sections.all.item_rows.settings.item_widths_max",
        "options": [
          {
            "value": "col-xxxl-6",
            "label": "2"
          },
          {
            "value": "col-xxxl-4",
            "label": "3"
          },
          {
            "value": "col-xxxl-3",
            "label": "4"
          },
          {
            "value": "col-xxxl-2",
            "label": "6"
          }
        ],
        "default": "col-xxxl-2"
      },
      {
        "type": "select",
        "id": "section_margin",
        "label": "t:sections.all.section_margin.label",
        "options": [
          {
            "value": "mb-0",
            "label": "t:sections.all.section_margin.option_none"
          },
          {
            "value": "mb-1",
            "label": "t:sections.all.section_margin.option_xsmall"
          },
          {
            "value": "mb-2",
            "label": "t:sections.all.section_margin.option_smaller"
          },
          {
            "value": "mb-3",
            "label": "t:sections.all.section_margin.option_small"
          },
          {
            "value": "mb-4",
            "label": "t:sections.all.section_margin.option_medium"
          },
          {
            "value": "mb-5",
            "label": "t:sections.all.section_margin.option_large"
          }
        ],
        "default": "mb-5"
      }
    ],
    "presets": [
      {
        "name": "t:sections.offset_collection_row.name"
      }
    ]
  }
{% endschema %}
