<header class="bm-header border-bottom border-1 position-relative">
  <div class="bm-header__container d-flex align-items-center px-2 px-xl-4">
    <nav class="d-flex justify-content-between flex-grow-1">
      <h1
        class="d-flex align-items-center justify-content-center"

        aria-label="{{ shop.name }}"
      >

        {%- capture bm_logo -%}

          {%- render 'bm-logo',
            bm_logo_image: section.settings.logo,
            bm_logo_max_width: section.settings.logo_max_width,
            bm_logo_in_header: true -%}

          <span class="visually-hidden">{{ shop.name }}</span>

        {%- endcapture -%}

        {%- render 'bm-link',
          bm_link_is_header: true,
          bm_link_title: logo_title,
          bm_link_classes: 'opacity-hover p-2 d-block text-decoration-none',
          bm_link_url: routes.root_url,
          bm_link_content: bm_logo -%}

      </h1>

    {%- assign enter_password = 'password_page.enter_password' | t -%}

    {%- render 'bm-link',
      bm_link_title: enter_password,
      bm_link_classes: "d-none bm-header__link-hover px-2 py-4",
      bm_link_url: "#store-password-mark",
      bm_link_content: enter_password,
      bm_link_styles: bm_link_styles -%}

    </nav>
  </div>
</header>

{% schema %}
  {
    "name": "t:sections.password_page_header.name",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "t:schema_global.logo.label"
      },
      {
        "type": "range",
        "id": "logo_max_width",
        "min": 50,
        "max": 350,
        "step": 5,
        "unit": "px",
        "label": "t:schema_global.logo.logo_max_width",
        "default": 90
      }
    ]
  }
{% endschema %}
