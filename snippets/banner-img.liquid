{%- assign bm_img_phone = single_img.settings.banner_image_phone -%}
{%- assign bm_img_tablet = single_img.settings.banner_image_tablet -%}
{%- assign bm_img_desk = single_img.settings.banner_image_desk -%}
{%- assign bm_img_max = single_img.settings.banner_image_max -%}

{%- unless single_video_visibility contains "d-none" -%}
  {%- assign show_phone_image = true -%}
  {%- else -%}
    {%- assign show_phone_image = false -%}
{%- endunless -%}

{%- if single_video_visibility == "d-block" or
  single_video_visibility == "d-block_d-xl-none" or
  single_video_visibility == "d-block_d-xxxl-none" or
  single_video_visibility == "d-block_d-xl-none_d-xxxl-block" or
  single_video_visibility contains "d-sm-block" -%}
  {%- assign show_tablet_image = false -%}
  {%- else -%}
    {%- assign show_tablet_image = true -%}
{%- endif -%}

{%- if single_video_visibility == "d-block" or
  single_video_visibility == "d-none_d-sm-block" or
  single_video_visibility == "d-block_d-xxxl-none" or
  single_video_visibility contains "d-xl-block" -%}
  {%- assign show_desk_image = false -%}
  {%- else -%}
    {%- assign show_desk_image = true -%}
{%- endif -%}

{%- if single_video_visibility == "d-block" or
  single_video_visibility == "d-none_d-sm-block" or
  single_video_visibility == "d-none_d-xl-block" or
  single_video_visibility == "d-block_d-sm-none_d-xl-block" or
  single_video_visibility == "d-block_d-xl-none_d-xxxl-block" or
  single_video_visibility contains "d-xxxl-block" -%}
  {%- assign show_max_image = false -%}
  {%- else -%}
    {%- assign show_max_image = true -%}
{%- endif -%}

{%- if show_phone_image -%}

  {%- render 'bm-image'
    bm_img: bm_img_phone,
    bm_img_alt: bm_img_phone.alt,
    bm_img_is_lazy: true,
    bm_img_wrapper_classes: "bm-img__wrapper--fixed-width d-block d-sm-none",
    bm_img_widths: "540",
    bm_img_width: bm_img_phone.width,
    bm_img_height: bm_img_phone.height -%}

{%- endif -%}

{%- if show_tablet_image -%}

  {%- render 'bm-image'
    bm_img: bm_img_tablet,
    bm_img_alt: bm_img_tablet.alt,
    bm_img_is_lazy: true,
    bm_img_wrapper_classes: "bm-img__wrapper--fixed-width d-none d-sm-block d-xl-none",
    bm_img_widths: "1080,1296",
    bm_img_width: bm_img_tablet.width,
    bm_img_height: bm_img_tablet.height -%}

{%- endif -%}

{%- if show_desk_image -%}

  {%- render 'bm-image'
    bm_img: bm_img_desk,
    bm_img_alt: bm_img_desk.alt,
    bm_img_is_lazy: true,
    bm_img_wrapper_classes: "bm-img__wrapper--fixed-width d-none d-xxxl-none d-xl-block",
    bm_img_widths: "2808",
    bm_img_width: bm_img_desk.width,
    bm_img_height: bm_img_desk.height -%}

{%- endif -%}

{%- if show_max_image -%}

  {%- render 'bm-image'
    bm_img: bm_img_max,
    bm_img_alt: bm_img_max.alt,
    bm_img_is_lazy: true,
    bm_img_wrapper_classes: "bm-img__wrapper--fixed-width d-none d-xxxl-block",
    bm_img_widths: "3024",
    bm_img_width: bm_img_max.width,
    bm_img_height: bm_img_max.height -%}

{%- endif -%}
