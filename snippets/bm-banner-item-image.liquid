{%- assign custom_img = block.settings.custom_img -%}

{%- if custom_img != blank -%}

  {%- render 'bm-image-block'
    bm_img: custom_img,
    bm_img_alt: custom_img.alt,
    bm_img_classes: bm_img_classes,
    bm_img_is_lazy: true,
    bm_img_margin: block.settings.img_margin,
    bm_img_wrapper_classes: "bm-img__wrapper--fixed-width",
    bm_img_widths: image_widths,
    bm_img_width: custom_img.width,
    bm_img_height: custom_img.height,
    bm_img_visibility: block.settings.img_visibility -%}

{%- endif -%}
