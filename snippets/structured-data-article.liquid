{
  "@context": "https://schema.org",
  "@type": "NewsArticle",
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": {{ request.origin | append: article.url | json }}
  },
  "headline": {{ article.title | json }},
  "image": {% render 'structured-data-images' current_image: article.image %},
  "datePublished": {{ article.published_at | json }},
  "dateModified": {{ article.updated_at | json }},
  "author": {
    "@type": "Person",
    "name": {{ article.author | json }}
  },
  "publisher": {
    "@type": "Organization",
    "name": {{ shop.name | json }},
    "logo": {
      "@type": "ImageObject",
      "url": "https:{{ settings.bm_logo | img_url: 'master' }}",
      "width": 90,
      "height": 33
    }
  }
}
